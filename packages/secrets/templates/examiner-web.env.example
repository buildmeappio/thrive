# Thrive Examiner Web - Local Development
# Copy to apps/examiner-web/.env or run: pnpm run setup:local

# Database (shared)
DATABASE_URL=postgresql://user:password@localhost:5432/thrive
DATABASE_SSL_REQUIRED=false

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3001/examiner
NEXT_PUBLIC_CDN_URL=
NEXT_PUBLIC_CLAIMANT_AVAILABILITY_URL=/claimant/availability

# AWS S3
AWS_REGION=ca-central-1
AWS_S3_REGION=ca-central-1
AWS_S3_ACCESS_KEY_ID=
AWS_S3_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=

# Email (OAuth)
OAUTH_USERNAME=
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_REFRESH_TOKEN=
ADMIN_NOTIFICATION_EMAIL=
EMAIL_REPLY_TO=

# Google
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=
GOOGLE_CONTRACT_FOLDER_ID=
GOOGLE_REPORT_TEMPLATE_ID=
DOCS_REFRESH_TOKEN=

# JWT (generate secure values for local)
JWT_OTP_TOKEN_SECRET=dev-otp-secret
JWT_OTP_TOKEN_SECRET_EXPIRY=15m
JWT_SET_PASSWORD_TOKEN_SECRET=dev-set-password-secret
JWT_SET_PASSWORD_TOKEN_SECRET_EXPIRY=1h
JWT_FORGET_PASSWORD_TOKEN_SECRET=dev-forget-password-secret
JWT_FORGET_PASSWORD_TOKEN_EXPIRY=1h
JWT_EXAMINER_INFO_REQUEST_TOKEN_SECRET=dev-examiner-info-secret
JWT_EXAMINER_INFO_REQUEST_TOKEN_SECRET_EXPIRY=1h
JWT_CLAIMANT_APPROVE_TOKEN_SECRET=dev-claimant-approve-secret
JWT_RESUME_TOKEN_SECRET=dev-resume-secret

# Auth
NEXTAUTH_SECRET=your-nextauth-secret

# Node
NODE_ENV=development
