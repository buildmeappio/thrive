# Thrive Organization Web - Local Development
# Copy to apps/organization-web/.env or run: pnpm run setup:local

# Database (shared)
DATABASE_URL=postgresql://user:password@localhost:5432/thrive
DATABASE_SSL_REQUIRED=false

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3002/organization
NEXT_PUBLIC_CDN_URL=
NEXT_PUBLIC_CLAIMANT_AVAILABILITY_URL=/claimant/availability
NEXT_PUBLIC_CLAIMANT_BOOKING_CANCEL_URL=/claimant/booking/cancel

# AWS
AWS_REGION=ca-central-1
AWS_S3_ACCESS_KEY_ID=
AWS_S3_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=
AWS_DYNAMODB_ACCESS_KEY_ID=
AWS_DYNAMODB_SECRET_ACCESS_KEY=
AWS_DYNAMODB_TABLE_NAME=
AWS_DYNAMODB_INDEX_NAME=

# Email (OAuth)
OAUTH_USERNAME=
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_REFRESH_TOKEN=

# NextAuth
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3002/organization

# JWT (generate secure values for local)
JWT_OTP_TOKEN_SECRET=dev-otp-secret
JWT_OTP_TOKEN_EXPIRY=15m
JWT_FORGET_PASSWORD_TOKEN_SECRET=dev-forget-password-secret
JWT_FORGET_PASSWORD_TOKEN_EXPIRY=1h
JWT_CLAIMANT_APPROVE_TOKEN_SECRET=dev-claimant-approve-secret
JWT_CLAIMANT_APPROVE_TOKEN_EXPIRY=1h
JWT_ORGANIZATION_INFO_REQUEST_TOKEN_SECRET=dev-org-info-secret
JWT_ORGANIZATION_INFO_REQUEST_TOKEN_EXPIRY=1h
JWT_ORGANIZATION_INVITATION_TOKEN_SECRET=dev-org-invitation-secret
JWT_ORGANIZATION_INVITATION_TOKEN_EXPIRY=1h

# Google
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=

# Node
NODE_ENV=development
