{
  "name": "@thrive/secrets",
  "version": "1.0.0",
  "private": true,
  "description": "Env setup for local/dev/staging/prod - fetch from AWS Secrets Manager or generate from templates",
  "scripts": {
    "setup:local": "node scripts/setup-local-env.js",
    "setup:local:aws": "node scripts/setup-local-env.js --source=aws",
    "setup:local:template": "node scripts/setup-local-env.js --source=template",
    "setup:local:local-json": "node scripts/setup-local-env.js --source=local-json",
    "secrets:upload": "node scripts/upload-secrets.js",
    "secrets:download": "node scripts/download-secrets.js",
    "secrets:upload:local": "node scripts/upload-secrets.js local",
    "secrets:upload:dev": "node scripts/upload-secrets.js dev",
    "secrets:upload:staging": "node scripts/upload-secrets.js staging",
    "secrets:upload:prod": "node scripts/upload-secrets.js prod",
    "secrets:download:local": "node scripts/download-secrets.js local",
    "secrets:download:dev": "node scripts/download-secrets.js dev",
    "secrets:download:staging": "node scripts/download-secrets.js staging",
    "secrets:download:prod": "node scripts/download-secrets.js prod"
  },
  "bin": {
    "thrive-setup-env": "./scripts/setup-local-env.js"
  },
  "engines": {
    "node": ">=20"
  }
}
