{
  "name": "admin-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 3000",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 next build --turbopack",
    "build:memory": "cross-env NODE_OPTIONS=--max-old-space-size=8192 next build --turbopack",
    "start": "next start -p 3000",
    "lint": "eslint",
    "lint:check": "eslint --quiet .",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format": "npm run format:check && npm run format:fix",
    "generate": "pnpm --filter @thrive/database run generate",
    "db:generate": "pnpm --filter @thrive/database run generate",
    "db:migrate": "pnpm --filter @thrive/database run migrate:dev",
    "db:push": "prisma db push",
    "db:studio": "pnpm --filter @thrive/database run studio",
    "db:test": "tsx scripts/test-database.ts",
    "predeploy": "chmod +x scripts/deploy.sh",
    "deploy:dev": "npm run predeploy && scripts/deploy.sh dev --app thrive-admin --env .env.development --config ecosystem.config.js",
    "deploy:staging": "npm run predeploy && scripts/deploy.sh staging --app thrive-admin --env .env.staging --config ecosystem.config.js",
    "deploy:qa": "npm run predeploy && scripts/deploy.sh qa --app thrive-admin --env .env.qa --config ecosystem.config.js",
    "deploy:production": "npm run predeploy && scripts/deploy.sh production --app thrive-admin --env .env.production --config ecosystem.config.js",
    "deploy:logs": "pm2 logs thrive-admin",
    "deploy:stop": "pm2 stop thrive-admin",
    "deploy:delete": "pm2 delete thrive-admin",
    "docker:build": "docker build -t admin-web:latest .",
    "docker:run": "docker build -t admin-web:latest . && docker run -p 3000:3000 admin-web:latest",
    "docker:stop": "docker stop admin-web",
    "docker:remove": "docker rm admin-web",
    "docker:dev:up": "cross-env NODE_ENV=development sh -c '(docker compose version > /dev/null 2>&1 && docker compose up --build -d) || docker-compose up --build -d'",
    "docker:dev:down": "sh -c '(docker compose version > /dev/null 2>&1 && docker compose down -v) || docker-compose down -v'",
    "docker:staging:up": "cross-env NODE_ENV=staging sh -c '(docker compose version > /dev/null 2>&1 && docker compose up --build -d) || docker-compose up --build -d'",
    "docker:staging:down": "cross-env NODE_ENV=staging sh -c '(docker compose version > /dev/null 2>&1 && docker compose down -v) || docker-compose down -v'",
    "docker:prod:up": "cross-env NODE_ENV=production sh -c '(docker compose version > /dev/null 2>&1 && docker compose up --build -d) || docker-compose up --build -d'",
    "docker:prod:down": "cross-env NODE_ENV=production sh -c '(docker compose version > /dev/null 2>&1 && docker compose down -v) || docker-compose down -v'"
  },
  "optionalDependencies": {
    "@tailwindcss/oxide-linux-x64-gnu": "^4.0.1",
    "lightningcss-linux-x64-gnu": "^1.30.1"
  },
  "dependencies": {
    "@thrive/database": "workspace:*",
    "@aws-sdk/client-s3": "^3.911.0",
    "@aws-sdk/s3-request-presigner": "^3.911.0",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/adapter-pg": "^7.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-table": "^8.21.3",
    "@tiptap/extension-color": "^3.14.0",
    "@tiptap/extension-font-family": "^3.14.0",
    "@tiptap/extension-highlight": "^3.14.0",
    "@tiptap/extension-horizontal-rule": "^3.14.0",
    "@tiptap/extension-image": "^3.14.0",
    "@tiptap/extension-link": "^3.14.0",
    "@tiptap/extension-placeholder": "^3.14.0",
    "@tiptap/extension-subscript": "^3.14.0",
    "@tiptap/extension-superscript": "^3.14.0",
    "@tiptap/extension-table": "^3.14.0",
    "@tiptap/extension-table-cell": "^3.14.0",
    "@tiptap/extension-table-header": "^3.14.0",
    "@tiptap/extension-table-row": "^3.14.0",
    "@tiptap/extension-task-item": "^3.14.0",
    "@tiptap/extension-task-list": "^3.14.0",
    "@tiptap/extension-text-align": "^3.14.0",
    "@tiptap/extension-text-style": "^3.14.0",
    "@tiptap/extension-typography": "^3.14.0",
