model OrganizationInvitationGroup {
  invitationId String   @map("invitation_id") @db.Uuid
  groupId      String   @map("group_id") @db.Uuid
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz()

  invitation OrganizationInvitation @relation("InvitationGroups", fields: [invitationId], references: [id], onDelete: Cascade)
  group      Group                 @relation(fields: [groupId], references: [id])

  @@id([invitationId, groupId])
  @@index([groupId])
  @@index([invitationId])
  @@map("organization_invitation_groups")
}

