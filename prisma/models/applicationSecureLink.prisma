model ApplicationSecureLink {
  id            String                      @id @unique @default(uuid()) @db.Uuid
  applicationId String                      @map("application_id") @db.Uuid
  secureLinkId  String                      @map("secure_link_id") @db.Uuid

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz()
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz()

  application ExaminerApplication @relation("ApplicationSecureLink", fields: [applicationId], references: [id])
  secureLink SecureLink @relation("SecureLinkApplication", fields: [secureLinkId], references: [id])

  @@map("application_secure_links")
}