model Location {
  id             String    @id @unique @default(uuid()) @db.Uuid
  organizationId String    @map("organization_id") @db.Uuid
  name           String    @map("name") @db.VarChar(255)
  addressJson    Json      @map("address_json")
  timezone       String?   @map("timezone") @db.VarChar(100)
  regionTag      String?   @map("region_tag") @db.VarChar(100)
  costCenterCode String?   @map("cost_center_code") @db.VarChar(100)
  isActive       Boolean   @default(true) @map("is_active")

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz()
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz()

  organization         Organization         @relation(fields: [organizationId], references: [id])
  groupLocations       GroupLocation[]
  userLocationMemberships UserLocationMembership[]
  billingProfiles      BillingProfile[]
  cases                Case[] @relation("CaseLocation")

  @@unique([organizationId, name])
  @@index([organizationId])
  @@map("locations")
}

