model OrganizationRole {
  id             String  @id @unique @default(uuid()) @db.Uuid
  organizationId String? @map("organization_id") @db.Uuid
  name           String  @map("name") @db.VarChar(255) // e.g., "Manager", "Coordinator", "Staff"
  description    String? @map("description") @db.Text
  isDefault      Boolean @default(false) @map("is_default") // for default member role

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz()
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz()

  organization   Organization?                @relation("OrganizationRoles", fields: [organizationId], references: [id])
  managers       OrganizationManager[]        @relation("OrganizationManagerRole")
  invitations    OrganizationInvitation[]     @relation("OrganizationInvitationRole")
  groups         Group[]                      @relation
  userRoleGrants UserRoleGrant[]              @relation
  permissions    OrganizationRolePermission[] @relation

  @@unique([organizationId, name])
  @@index([organizationId])
  @@index([name])
  @@map("organization_roles")
}
