{
  "name": "thrive-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=admin-web",
    "dev:admin": "npm run dev --workspace=admin-web",
    "build": "npm run build --workspace=admin-web",
    "build:admin": "npm run build --workspace=admin-web",
    "db:generate": "npm run generate --workspace=@thrive/database",
    "db:migrate": "npm run migrate:dev --workspace=@thrive/database",
    "db:studio": "npm run studio --workspace=@thrive/database"
  },
  "engines": {
    "node": ">=20"
  }
}
