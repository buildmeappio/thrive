{
  "name": "thrive-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19",
        "react-dom": "19"
      }
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:admin": "turbo run dev --filter=admin-web",
    "dev:examiner": "turbo run dev --filter=examiner-web",
    "dev:organization": "turbo run dev --filter=organization-web",
    "build": "turbo run build",
    "build:admin": "turbo run build --filter=admin-web",
    "build:examiner": "turbo run build --filter=examiner-web",
    "build:organization": "turbo run build --filter=organization-web",
    "lint": "turbo run lint",
    "format": "prettier --write \"apps/**/*.{js,jsx,ts,tsx,json,css,md}\" \"packages/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"apps/**/*.{js,jsx,ts,tsx,json,css,md}\" \"packages/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "db:generate": "turbo run generate",
    "db:migrate": "pnpm --filter @thrive/database run migrate:dev",
    "db:studio": "pnpm --filter @thrive/database run studio",
    "db:seed": "pnpm --filter @thrive/database run seed",
    "db:up": "bash scripts/db-up.sh",
    "db:down": "bash scripts/db-down.sh",
    "db:sync": "bash scripts/db-sync.sh",
    "setup:local": "pnpm --filter @thrive/secrets run setup:local",
    "setup:local:aws": "pnpm --filter @thrive/secrets run setup:local:aws",
    "setup:local:template": "pnpm --filter @thrive/secrets run setup:local:template",
    "setup:local:local-json": "pnpm --filter @thrive/secrets run setup:local:local-json",
    "secrets:upload": "pnpm --filter @thrive/secrets run secrets:upload",
    "secrets:download": "pnpm --filter @thrive/secrets run secrets:download",
    "prepare": "husky",
    "secrets:upload:local": "pnpm --filter @thrive/secrets run secrets:upload:local",
    "secrets:upload:dev": "pnpm --filter @thrive/secrets run secrets:upload:dev",
    "secrets:upload:staging": "pnpm --filter @thrive/secrets run secrets:upload:staging",
    "secrets:upload:prod": "pnpm --filter @thrive/secrets run secrets:upload:prod",
    "secrets:download:local": "pnpm --filter @thrive/secrets run secrets:download:local",
    "secrets:download:dev": "pnpm --filter @thrive/secrets run secrets:download:dev",
    "secrets:download:staging": "pnpm --filter @thrive/secrets run secrets:download:staging",
    "secrets:download:prod": "pnpm --filter @thrive/secrets run secrets:download:prod",
    "deploy:admin:dev": "bash deploy/scripts/deploy.sh --app admin-web --env dev",
    "deploy:admin:local": "bash deploy/scripts/deploy.sh --app admin-web --env dev --skip-git",
    "deploy:admin:staging": "bash deploy/scripts/deploy.sh --app admin-web --env staging",
    "deploy:admin:production": "bash deploy/scripts/deploy.sh --app admin-web --env production",
    "deploy:examiner:dev": "bash deploy/scripts/deploy.sh --app examiner-web --env dev",
    "deploy:examiner:local": "bash deploy/scripts/deploy.sh --app examiner-web --env dev --skip-git",
    "deploy:examiner:staging": "bash deploy/scripts/deploy.sh --app examiner-web --env staging",
    "deploy:examiner:production": "bash deploy/scripts/deploy.sh --app examiner-web --env production",
    "deploy:organization:dev": "bash deploy/scripts/deploy.sh --app organization-web --env dev",
    "deploy:organization:local": "bash deploy/scripts/deploy.sh --app organization-web --env dev --skip-git",
    "deploy:organization:staging": "bash deploy/scripts/deploy.sh --app organization-web --env staging",
    "deploy:organization:production": "bash deploy/scripts/deploy.sh --app organization-web --env production"
  },
  "engines": {
    "node": ">=24"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.8.10"
  }
}
